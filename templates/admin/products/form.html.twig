{% extends 'base.html.twig' %}

{% block title %}{{ product.id ? 'Modifier' : 'Ajouter' }} un produit{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    .custom-file-label::after {
        content: "Parcourir";
    }
    .preview-images {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
    }
    .preview-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 4px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>{{ product.id ? 'Modifier' : 'Ajouter' }} un produit</h1>
                <a href="{{ path('app_admin_products') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour Ã  la liste
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <div class="card shadow">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.price) }}
                                    {{ form_widget(form.price) }}
                                    {{ form_errors(form.price) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.stock) }}
                                    {{ form_widget(form.stock) }}
                                    {{ form_errors(form.stock) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.promotion) }}
                                    {{ form_widget(form.promotion) }}
                                    {{ form_errors(form.promotion) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description) }}
                                    {{ form_errors(form.description) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.category) }}
                                    {{ form_widget(form.category) }}
                                    {{ form_errors(form.category) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.productImages) }}
                                    {{ form_widget(form.productImages) }}
                                    {{ form_errors(form.productImages) }}
                                    
                                    {% if product.productImages|length > 0 %}
                                        <div class="preview-images mt-3">
                                            {% for image in product.productImages %}
                                                <img src="/uploads/products/{{ image.filename }}" 
                                                     alt="Image {{ loop.index }}" 
                                                     class="preview-image">
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                {{ product.id ? 'Enregistrer les modifications' : 'Ajouter le produit' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const imageInput = document.querySelector('input[type="file"]');
    const previewContainer = document.createElement('div');
    previewContainer.className = 'preview-images mt-3';
    imageInput.parentNode.appendChild(previewContainer);

    imageInput.addEventListener('change', function(e) {
        previewContainer.innerHTML = '';
        Array.from(e.target.files).forEach(file => {
            const reader = new FileReader();
            reader.onload = function(e) {
                const img = document.createElement('img');
                img.src = e.target.result;
                img.className = 'preview-image';
                previewContainer.appendChild(img);
            }
            reader.readAsDataURL(file);
        });
    });
});
</script>
{% endblock %} 