{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe - Insatianet{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-custom-red text-white">
                    <h1 class="h3 mb-0">Réinitialiser votre mot de passe</h1>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <p class="mb-4">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

                    {{ form_start(requestForm) }}
                        <div class="mb-3">
                            {{ form_label(requestForm.email) }}
                            {{ form_widget(requestForm.email) }}
                            {{ form_errors(requestForm.email) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer le lien
                            </button>
                        </div>
                    {{ form_end(requestForm) }}

                    <div class="mt-3 text-center">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 