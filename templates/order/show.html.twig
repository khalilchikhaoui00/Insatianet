{% extends 'base.html.twig' %}

{% block title %}Détails de la commande - Insatianet{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-custom-red text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Détails de la commande #{{ order.id }}</h2>
                    <a href="{{ path('app_order_history') }}" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Retour à l'historique
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h3 class="h5 mb-3">Informations de commande</h3>
                            <p><strong>Date :</strong> {{ order.orderDate|date('d/m/Y H:i') }}</p>
                            <p><strong>Statut :</strong> 
                                {% if order.status == 'En attente' %}
                                    <span class="badge bg-warning">{{ order.status }}</span>
                                {% elseif order.status == 'Validée' %}
                                    <span class="badge bg-success">{{ order.status }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ order.status }}</span>
                                {% endif %}
                            </p>
                            <p><strong>Montant total :</strong> {{ order.totalAmount }}€</p>
                        </div>
                        <div class="col-md-6">
                            <h3 class="h5 mb-3">Adresse de livraison</h3>
                            <p>{{ order.shippingAddress|nl2br }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 